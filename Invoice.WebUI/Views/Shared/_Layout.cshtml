<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Invoice System</title>

    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">

    <link href="~/content/plugins/datepicker/datepicker3.css" rel="stylesheet" />

    <link rel="stylesheet" href="/Content/assets/css/AdminLTE.min.css">
    <link href="~/Content/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/assets/css/skins/skin-purple.min.css">

    <script src="/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>

</head>

<body class="hold-transition skin-purple sidebar-mini">
        <div class="wrapper">
            <!-- Main Header -->
            <header class="main-header">
                <!-- Logo -->
                <a href="@Url.Action("Index")" class="logo">
                    <!-- mini logo for sidebar mini 50x50 pixels -->
                    <span class="logo-mini"><b>A</b>LT</span>
                    <!-- logo for regular state and mobile devices -->
                    <span class="logo-lg"><b>Grind</b>Control</span>
                </a>
                <!-- Header Navbar -->
                <nav class="navbar navbar-static-top" role="navigation">
                    <!-- Sidebar toggle button-->
                    <!-- Navbar Right Menu -->
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            

                            <li><a href="@Url.Action("signout", "Home")"><i class="fa fa-sign-out"></i> <span>Logout</span></a></li>
                        </ul>
                    </div>
                </nav>
            </header> 
            @Html.Partial("_Navigation")
            <div class="content-wrapper">
             
                <section class="content">
                    @RenderBody()
                </section>
            </div>
           
            <footer class="main-footer">
                
                <div class="pull-right hidden-xs">
                    Made with <i class="fa fa-heart pulse"></i>
                </div>
                <!-- Default to the left -->
                
            </footer>
            <!-- Control Sidebar -->
        </div>


        <!-- Bootstrap 3.3.6 -->



        <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="~/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/content/plugins/datepicker/bootstrap-datepicker.js"></script>

        <!-- AdminLTE App -->
        <script src="/Content/assets/js/app.min.js"></script>
        <script type="text/javascript">
        $(function() {
            
        });
        </script>

        @RenderSection("scripts", required: false)

    </body>


</html>
