@using Invoice.WebUI.Helper
@if (User.Identity.IsAuthenticated)
{
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="/Content/assets/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>@User.Identity.Name</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            </div>

            <ul class="sidebar-menu">
                <li class="header">Main Menu</li>


                <li class="@Html.IsSelected("Home","Index")"><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> <span>DashBoard</span></a></li>
                <li class="@Html.IsSelected("Customer","Index")"><a href="@Url.Action("Index", "Customer")"><i class="fa fa-users"></i> <span>Customer</span></a></li>
                <li class="@Html.IsSelected("Product","Index")"><a href="@Url.Action("Index", "Product")"><i class="fa fa-user-md"></i><span>Product</span></a></li>
                <li class="@Html.IsSelected("Invoice","Index")"><a href="@Url.Action("Index", "Invoice")"><i class="fa fa fa-bars"></i><span>Invoice</span></a></li>
                <li class="@Html.IsSelected("Company","Index")"><a href="@Url.Action("Index", "Company")"><i class="fa fa-building"></i><span>Company</span></a></li>
                <li class="@Html.IsSelected("Users","Index")"><a href="@Url.Action("Index", "Users")"><i class="fa fa-users"></i> <span>User Profile</span></a></li>
                <li><a href="@Url.Action("signout", "Home")"><i class="fa fa-sign-out"></i> <span>Logout</span></a></li>
            </ul>
        </section>
    </aside>
}